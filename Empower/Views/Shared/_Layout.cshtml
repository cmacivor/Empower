@using Microsoft.AspNetCore.Http
@using Empower.Authentication

@{ 
    var authResponse = Context.Session.Get<AuthenticationResponse>("AuthenticationResponse");
    
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Empower</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <header>
            <nav class="navbar navbar-expand-md stPatricksBlue">
                <a class="navbar-brand" href="/">
                    <img src="~/img/logoBlue.jpg" style="width:100px;" />
                </a>
                <button class="navbar-toggler navbar-light navbar-default" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link header-navlink hover-navlink" style="color:#EFEFEF">
                                <span class="oi oi-home" aria-hidden="true"></span> Office of Community Wealth Building
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link header-navlink hover-navlink" style="color:#EFEFEF" href="@Url.Action("Index", "CaseManagement")">
                                <span class="oi oi-plus" aria-hidden="true"></span> Case Management
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle header-navlink hover-navlink" href="#" style="color:#EFEFEF" id="reportsDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Reports
                            </a>
                            <div class="dropdown-menu" aria-labelledby="reportsDropdownMenuLink">
                                <a class="dropdown-item" href="#">Partipant Specific Service</a>
                                <a class="dropdown-item" href="#">Enrollment Report</a>
                                <a class="dropdown-item" href="#">Career Station Programmatic Outcomes - Combined</a>
                                <a class="dropdown-item" href="#">Career Station Programmatic Outcomes - Monthly</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle header-navlink hover-navlink" href="#" style="color:#EFEFEF" id="documentsDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Documents
                            </a>
                            <div class="dropdown-menu" aria-labelledby="documentsDropdownMenuLink">
                                <a class="dropdown-item" href="#">NewVDIR testing</a>
                                <a class="dropdown-item" href="#">New Matrix</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle header-navlink hover-navlink" style="color:#EFEFEF;cursor:pointer" id="adminDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Admin
                            </a>
                            <div class="dropdown-menu" aria-labelledby="adminDropdownMenuLink">
                                <a class="dropdown-item" href="~/admin/assessmenttype">
                                    <span class="oi oi-plus" aria-hidden="true"></span> AssessmentType
                                </a>
                                 <a class="dropdown-item" href="~/admin/assessmentsubtype">
                                    <span class="oi oi-plus" aria-hidden="true"></span> Assessment SubType
                                </a>
                                <a class="dropdown-item" href="~/admin/assistancetype">
                                    <span class="oi oi-plus" aria-hidden="true"></span> Assistance Type
                                </a>
                                <a class="dropdown-item" href="~/admin/addresstype">
                                    <span class="oi oi-plus" aria-hidden="true"></span> AddressType
                                </a>
                                <a class="dropdown-item" href="~/admin/careerpathway">
                                    <span class="oi oi-plus" aria-hidden="true"></span> Career Pathway
                                </a>
                                <a class="dropdown-item" href="~/admin/jobstatus">
                                    <span class="oi oi-plus" aria-hidden="true"></span> Job Status
                                </a>        
                                <a class="dropdown-item" href="~/admin/serviceprogramcategory">
                                    <span class="oi oi-plus" aria-hidden="true"></span> Service Program Category
                                </a>                        
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle header-navlink hover-navlink" style="color:#EFEFEF" id="loginDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @authResponse.userName
                            </a>
                            <div class="dropdown-menu" aria-labelledby="loginDropdownMenuLink">         
                                <a class="dropdown-item" href="@Url.Action("LogOut", "Home")">
                                    <span class="oi oi-plus" aria-hidden="true"></span> Log Out
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - Empower - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script crossorigin src="https://unpkg.com/react@16/umd/react.development.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@16/umd/react-dom.development.js"></script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
 

    @RenderSection("Scripts", required: false)
</body>
</html>
